@model Clientes.Models.Prospecto

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Información Prospecto</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Nombre" class="control-label">Nombre*</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PrimerApellido" class="control-label">Primer Apellido*</label>
                    <input asp-for="PrimerApellido" class="form-control" required />
                    <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="SegundoApellido" class="control-label">Segundo Apellido</label>
                    <input asp-for="SegundoApellido" class="form-control" />
                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Calle" class="control-label">Calle*</label>
                    <input asp-for="Calle" class="form-control" required />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Numero" class="control-label">Numero*</label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Colonia" class="control-label">Colonia*</label>
                    <input asp-for="Colonia" class="form-control" required />
                    <span asp-validation-for="Colonia" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="CodigoPostal" class="control-label">Codigo Postal*</label>
                    <input asp-for="CodigoPostal" class="form-control" required />
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Telefono" class="control-label">Telefono*</label>
                    <input asp-for="Telefono" class="form-control" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Rfc" class="control-label">RFC*</label>
                    <input asp-for="Rfc" class="form-control" required />
                    <span asp-validation-for="Rfc" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6" >
                    <label asp-for="Archivo" class="control-label">Seleccionar archivo:*</label>
                    <input asp-for="Archivo" type="file" class="form-control" accept=".pdf" />
                    <span asp-validation-for="Archivo" class="text-danger"></span>
                </div>
            </div>
                <input type="hidden" asp-for="Estatus" value="Enviado"/>
               
           
                <input type="hidden" asp-for="Activo" value="Si" />
               
            <div class="form-group mt-5 d-flex flex-row justify-content-between">
                <a class="btn btn-danger" id="guardarSalir">Salir</a>
                <input type="submit" id="guardarProspecto" value="Enviar" class="btn btn-primary flex-end" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#guardarSalir").click(function () {
            Swal.fire({
                title: "Desea continuar con la operacion?",
                text: "Todos los datos ingresados hasta este momento se perderan",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "Cancelar",
                confirmButtonText: "Si, deseo salir!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Prospectoes';
                }
            });
        });
	</script>
}
